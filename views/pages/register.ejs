    <title>Sign up</title>

    

    <!-- Bootstrap core CSS -->
<link href="/css/bootstrap.min.css" rel="stylesheet">



    
    <!-- Custom styles for this template -->
    <link href="/css/custom.css" rel="stylesheet">
  </head>
  <body class="text-center" id="body">
    
<main class="form-signin">
  <form action="/user/register" method="POST">
    <h1 class="h3 mb-3 fw-normal">Sign up</h1>

    <% if(errors != null && errors.length > 0) { %>
      <% for(let i = 0; i < errors.length; i++) { %> 
        <p class="alert alert-danger">
          <%= errors[i] %>
        </p>
      <% } %> 
    <% } %>

    <div class="form-floating">
      <input type="email" name="email" value="<%= email %>" class="form-control" id="floatingInput" placeholder="">
      <label for="floatingInput" style="background-color: transparent;">Email address</label>
    </div>
    <div class="form-floating">
      <input type="password" name="password" value="<%= password %>" class="form-control" id="floatingPassword" placeholder="">
      <label for="floatingPassword" style="background-color: transparent;">Password</label>
    </div>
    <div class="form-floating">
      <input type="password" name="passwordConfirm" value="" class="form-control" id="floatingPasswordConfirm" placeholder="">
      <label for="floatingPasswordConfirm" style="background-color: transparent;">Password Confirm</label>
    </div>

    <button class="w-100 btn btn-lg btn-primary" type="submit">Sign up</button>
    <p class="mt-5 mb-3 text-muted">&copy; 2023 Atat Company</p>
  </form>
</main>


    
  </body>
</html>
