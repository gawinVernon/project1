<%- include('../partials/head.ejs') %>
<%- include('../partials/header.ejs') %>

<body class="text-center">

    <script>
        function lob() {
            let message = 'Are you sure you want to delete this item?'
            let result = window.confirm(message)
            if(result == true) {
                document.querySelector('#deleteButton').click()
            } else {
                return
            }
        }
    </script>

    <div class="container text-end">
        <button type="button" class="btn btn-danger" onclick="lob()">Delete</button>
    </div>


    <div class="container visually-hidden">
        <form action="/products/<%= data._id %>?_method=DELETE" method="POST">
        <button id="deleteButton" class="btn btn-danger">Delete</button>
        </form>
    </div>


    <h3 class="mb-5">Update A Product</h3>

    <div class="container w-25">
        <h3>Name: <%= data.name %></h3>
        <h4>Price: <%= data.price %></h4>
        <h4>ID: <%= data._id %></h4>
    </div>
    
    <div class="g-3 container w-25">
        
        <form action="/products/<%= data._id %>?_method=PUT" method="POST">   
        
        
        <div class="form-floating mb-3">
            <input name="price" type="number" class="form-control" id="floatingPrice" placeholder="" required >
            <label for="floatingPrice" style="background-color: transparent;">Price</label>
        </div>
        
        
            <button class="btn btn-primary mb-3 mt-3" type="submit">Update</button>
        </form>

     
        
    </div>
    
</body>


<%- include('../partials/footer.ejs') %>